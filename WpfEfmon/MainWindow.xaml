<Window x:Class="WpfEfmon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:WpfEfmon"
        mc:Ignorable="d"
        Title="통합서식지 운영자 모니터링" Height="1000" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="Gray">
            <DockPanel>
                <Button x:Name="btnDevTest"  DockPanel.Dock="Left" Margin="10,0,10,0"
                       Content="개발기테스트"
                       Padding="12"
                       Click="btnDevTest_Click"  Height="40" Width="100" />
                <Button x:Name="btnPrdTest" DockPanel.Dock="Left"
                      Content="상용기테스트"
                      HorizontalAlignment="Left"
                      Click="btnPrdTest_Click" Height="40" Width="100" />
            </DockPanel>

        </Grid>

        <Frame Name="frame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Source="/PrdPage.xaml">
        </Frame>

    </Grid>
</Window>
